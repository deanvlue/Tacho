<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/txtCurrentSpeed"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:text="000.0 m/s"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="top|bottom|center_horizontal"
        android:layout_weight="0.08"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/txtCurrentSpeedKmHr"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:text="000.0 km/h"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="top|bottom|center_horizontal"
        android:layout_weight="0.08"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:typeface="sans"/>

    <CheckBox
        android:id="@+id/chkMetricUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unidades mÃ©tricas mi buen?"
        android:textSize="24dp">

    </CheckBox>

</LinearLayout>
